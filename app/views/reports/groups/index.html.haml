.page-heading
  .heading-accent
  %h1= t('.title')

  .actions

%table
  %tr
    %th= t('order')
    %th= ta(Group, :name)
    %th= ta(Group, :kind)

  - @groups.each_with_index do |group, idx|
    %tr
      %td= idx + 1
      %td= link_to group.name, reports_group_path(group)
      %td= group.kind
