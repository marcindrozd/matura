= form_tag exam_student_task_path(@student, @task), method: :put do
  %table
    %tr
      - @scores.each do |score|
        = fields_for 'scores[]', score do |f|
          %td
            = f.label score.subtask.number
            = f.text_field :score
            = show_errors(score, :score)

  = submit_tag t('save'), class: 'btn btn-info'