.page-heading
  .heading-accent
  %h1= @group.name

  .actions

%ul.accordion-tabs-minimal
  %li.tab-header-and-content
    %a.tab-link.is-active{:href => "#"} Podstawa
    .tab-content
      %table.fixed-table
        %tr
          %th.wider-cell
            - skills_heading(@group.students.standard.first.standard_tasks)

        %tr
          %th.wider-cell= tc(Student)

          - @group.students.standard.first.standard_tasks.each do |task|
            %th= task.extended_number

        - @group.students.standard.each do |student|
          %tr
            %td= student.name
            - student.standard_tasks.each do |task|
              %td= link_to task.full_score(student), edit_exam_student_task_path(student, task)

  %li.tab-header-and-content
    %a.tab-link{:href => "#"} Rozszerzenie
    .tab-content
      %table.fixed-table
        %tr
          %th.wider-cell
            - skills_heading(@group.students.extended.first.extended_tasks)

        %tr
          %th.wider-cell= tc(Student)

          - @group.students.extended.first.extended_tasks.each do |task|
            %th= task.extended_number

        - @group.students.extended.each do |student|
          %tr
            %td= student.name
            - student.extended_tasks.each do |task|
              %td= link_to task.full_score(student), edit_exam_student_task_path(student, task)

